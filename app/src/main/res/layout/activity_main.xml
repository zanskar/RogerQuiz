<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/pad_20"
        android:orientation="vertical"
        tools:context="com.example.android.rogerquiz.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/roger"
            />
        <EditText
            android:id="@+id/name_field"
            style="@style/Questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_30"
            android:layout_marginBottom="@dimen/pad_16"
            android:layout_marginLeft="@dimen/pad_35"
            android:layout_marginRight="@dimen/pad_35"
            android:padding="@dimen/pad_16"
            android:background="@drawable/rounded_corner_y"
            android:hint="@string/user_name"
            android:textColor="@color/colorGreen"
            android:layout_gravity="center"
            android:inputType="textCapWords" />

        <TextView
            android:id="@+id/question_1"
            style="@style/Questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_16"
            android:layout_marginTop="@dimen/pad_16"
            android:padding="@dimen/pad_24"
            android:text="@string/quest_1"
            android:textStyle="bold"/>

        <CheckBox
            android:id="@+id/answer_q_1_cb_1"
            style="@style/Answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_16"
            android:layout_marginBottom="@dimen/pad_16"
            android:layout_marginTop="@dimen/pad_16"
            android:layout_marginLeft="@dimen/pad_35"
            android:layout_marginRight="@dimen/pad_35"
            android:buttonTint="@color/colorOrange"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner_y"
            android:text="@string/answer_1_q_1" />

        <CheckBox
            android:id="@+id/answer_q_1_cb_2"
            style="@style/Answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_16"
            android:layout_marginBottom="@dimen/pad_16"
            android:layout_marginTop="@dimen/pad_16"
            android:layout_marginLeft="@dimen/pad_35"
            android:layout_marginRight="@dimen/pad_35"
            android:layout_gravity="center"
            android:buttonTint="@color/colorOrange"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner_y"
            android:text="@string/answer_2_q_1" />

        <CheckBox
            android:id="@+id/answer_q_1_cb_3"
            style="@style/Answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_16"
            android:layout_marginBottom="@dimen/pad_16"
            android:layout_marginTop="@dimen/pad_16"
            android:layout_marginLeft="@dimen/pad_35"
            android:layout_marginRight="@dimen/pad_35"
            android:layout_gravity="center"
            android:buttonTint="@color/colorOrange"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner_y"
            android:text="@string/answer_3_q_1" />

        <CheckBox
            android:id="@+id/answer_q_1_cb_4"
            style="@style/Answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_16"
            android:layout_marginBottom="@dimen/pad_16"
            android:layout_marginTop="@dimen/pad_16"
            android:layout_marginLeft="@dimen/pad_35"
            android:layout_marginRight="@dimen/pad_35"
            android:layout_gravity="center"
            android:buttonTint="@color/colorOrange"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner_y"
            android:text="@string/answer_4_q_1" />

        <TextView
            android:id="@+id/question_2"
            style="@style/Questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_24"
            android:layout_marginBottom="@dimen/pad_16"
            android:layout_marginTop="@dimen/pad_16"
            android:textStyle="bold"
            android:text="@string/quest_2" />

        <RadioGroup
            android:id="@+id/answer_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/answer_q_2_rb_1"
                style="@style/Answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/pad_16"
                android:layout_marginBottom="@dimen/pad_16"
                android:layout_marginTop="@dimen/pad_30"
                android:layout_marginLeft="@dimen/pad_35"
                android:layout_marginRight="@dimen/pad_35"
                android:textStyle="bold"
                android:buttonTint="@color/colorOrange"
                android:background="@drawable/rounded_corner_y"
                android:text="@string/answer_1_q_2" />

            <RadioButton
                android:id="@+id/answer_q_2_rb_2"
                style="@style/Answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/pad_16"
                android:layout_marginBottom="@dimen/pad_16"
                android:layout_marginTop="@dimen/pad_16"
                android:layout_marginLeft="@dimen/pad_35"
                android:layout_marginRight="@dimen/pad_35"
                android:textStyle="bold"
                android:buttonTint="@color/colorOrange"
                android:background="@drawable/rounded_corner_y"
                android:text="@string/answer_2_q_2" />

        </RadioGroup>

        <TextView
            android:id="@+id/question_3"
            style="@style/Questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_16"
            android:padding="@dimen/pad_24"
            android:textStyle="bold"
            android:text="@string/quest_3" />

        <EditText
            android:id="@+id/slam_field"
            style="@style/Questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_16"
            android:layout_marginTop="@dimen/pad_30"
            android:layout_marginLeft="@dimen/pad_35"
            android:layout_marginRight="@dimen/pad_35"
            android:padding="@dimen/pad_16"
            android:hint="@string/nb_slam"
            android:layout_gravity="center"
            android:textColor="@color/colorGreen"
            android:background="@drawable/rounded_corner_y" />

        <TextView
            android:id="@+id/question_4"
            style="@style/Questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_16"
            android:layout_marginTop="@dimen/pad_16"
            android:padding="@dimen/pad_24"
            android:textStyle="bold"
            android:text="@string/quest_4" />

        <RadioGroup
            android:id="@+id/answer_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/answer_q_4_rb_1"
                style="@style/Answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/pad_16"
                android:layout_marginBottom="@dimen/pad_16"
                android:layout_marginTop="@dimen/pad_16"
                android:layout_marginLeft="@dimen/pad_35"
                android:layout_marginRight="@dimen/pad_35"
                android:buttonTint="@color/colorOrange"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner_y"
                android:text="@string/answer_1_q_4" />

            <RadioButton
                android:id="@+id/answer_q_4_rb_2"
                style="@style/Answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/pad_16"
                android:layout_marginBottom="@dimen/pad_16"
                android:layout_marginTop="@dimen/pad_16"
                android:layout_marginLeft="@dimen/pad_35"
                android:layout_marginRight="@dimen/pad_35"
                android:textStyle="bold"
                android:buttonTint="@color/colorOrange"
                android:background="@drawable/rounded_corner_y"
                android:text="@string/answer_2_q_4" />

        </RadioGroup>

        <TextView
            android:id="@+id/question_5"
            style="@style/Questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_16"
            android:layout_marginTop="@dimen/pad_16"
            android:padding="@dimen/pad_24"
            android:textStyle="bold"
            android:text="@string/quest_5" />

        <RadioGroup
            android:id="@+id/answer_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <RadioButton
                android:id="@+id/answer_q_5_rb_1"
                style="@style/Answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/pad_16"
                android:layout_marginBottom="@dimen/pad_16"
                android:layout_marginTop="@dimen/pad_16"
                android:layout_marginLeft="@dimen/pad_35"
                android:layout_marginRight="@dimen/pad_35"
                android:buttonTint="@color/colorOrange"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner_y"
                android:text="@string/answer_1_q_5" />

            <RadioButton
                android:id="@+id/answer_q_5_rb_2"
                style="@style/Answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/pad_16"
                android:layout_marginBottom="@dimen/pad_16"
                android:layout_marginTop="@dimen/pad_16"
                android:layout_marginLeft="@dimen/pad_35"
                android:layout_marginRight="@dimen/pad_35"
                android:buttonTint="@color/colorOrange"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner_y"
                android:text="@string/answer_2_q_5" />

            <RadioButton
                android:id="@+id/answer_q_5_rb_3"
                style="@style/Answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/pad_16"
                android:layout_marginBottom="@dimen/pad_16"
                android:layout_marginTop="@dimen/pad_16"
                android:layout_marginLeft="@dimen/pad_35"
                android:layout_marginRight="@dimen/pad_35"
                android:buttonTint="@color/colorOrange"
                android:textStyle="bold"
                android:background="@drawable/rounded_corner_y"
                android:text="@string/answer_3_q_5" />

        </RadioGroup>


        <Button
            android:id="@+id/end_test_button"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_80"
            android:layout_marginLeft="@dimen/pad_80"
            android:layout_marginRight="@dimen/pad_80"
            android:layout_marginTop="@dimen/pad_24"
            android:padding="@dimen/pad_20"
            android:onClick="endTest"
            android:textStyle="bold"
            android:background="@drawable/rounded_corner"
            android:text="@string/end_test" />

    </LinearLayout>
</ScrollView>

